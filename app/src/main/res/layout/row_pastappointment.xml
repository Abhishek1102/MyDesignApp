<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lv_searchbar"
            android:layout_margin="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:orientation="vertical">

                    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                        android:id="@+id/iv_pastAppoinmentDoctorImage"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:scaleType="fitXY"
                        app:siShape="@drawable/shape_rounded_rectangle"
                        app:siSquare="true"
                        tools:src="@drawable/doctor_image" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:orientation="vertical">

                    <com.example.mydesignapp.helper.CustomTextViewBold
                        android:id="@+id/tv_pastAppointmentDoctorName"
                        style="@style/black_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Dr. Raymond Martin" />


                    <com.example.mydesignapp.helper.CustomTextViewSemiBold
                        android:id="@+id/tv_pastappointmentSpeciality"
                        style="@style/gray_9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Cardiologist" />


                    <com.example.mydesignapp.helper.CustomTextViewMedium
                        android:id="@+id/tv_pastAppointmentDoctorAddress"
                        style="@style/gray_9"
                        android:layout_width="match_parent"
                        android:gravity="bottom"
                        android:layout_height="match_parent"
                        tools:text="Memorial Drive, MA" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_color_linearlayout"
                        android:backgroundTint="@color/blue_app"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_gravity="end"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/iv_optionicon"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:padding="@dimen/_1sdp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/call_icon"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_1sdp"
                        android:orientation="horizontal">
                        <com.example.mydesignapp.helper.CustomTextViewMedium
                            android:id="@+id/tv_pastappointmentDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/gray_9"
                            android:gravity="end"
                            android:maxLines="1"
                            tools:text="05 Oct,2020"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end
">

                    <com.example.mydesignapp.helper.CustomTextViewBold
                        android:id="@+id/tv_pastAppointmentDoctorTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginRight="@dimen/_3sdp"
                        style="@style/black_10"
                        tools:text="6:00" />

                    <com.example.mydesignapp.helper.CustomTextViewBold
                        android:id="@+id/tv_pastAppointmentDoctorTimeDayNight"
                        style="@style/black_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        tools:text="PM" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginVertical="@dimen/_1sdp"
                        android:layout_gravity="end">

                        <com.example.mydesignapp.helper.CustomTextViewSemiBold
                            android:id="@+id/tv_writereview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/write_review"
                            android:gravity="end"
                            android:textColor="@color/blue_app"
                            android:textSize="@dimen/_9sdp"/>

                        <View
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_gravity="end"
                            android:background="@color/blue_app"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>