<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:backgroundTint="@color/light_gray">
        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/iv_notificationicon"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:scaleType="fitXY"
            app:siShape="@drawable/shape_rounded_rectangle"
            app:siSquare="true"
            tools:src="@drawable/notification_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:orientation="vertical">
        <com.example.mydesignapp.helper.CustomTextViewSemiBold
            android:id="@+id/tv_notificationtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Appointment Reminder"
            style="@style/black_11"/>
        <com.example.mydesignapp.helper.CustomTextViewMedium
            android:id="@+id/tv_notificationdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            tools:text="Your appointment will start after 15 minutes"
            style="@style/gray_10"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.example.mydesignapp.helper.CustomTextViewMedium
            android:id="@+id/tv_notificationtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/gray_9"
            tools:text="10 Mins ago"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:background="@color/light_gray"/>
    </LinearLayout>
</LinearLayout>
